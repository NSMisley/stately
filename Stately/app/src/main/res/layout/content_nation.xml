<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.lloydtorres.stately.NationActivity"
    tools:showIn="@layout/app_bar_nation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="#FFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nation_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/side_nav_bar"/>

        <com.github.siyamed.shapeimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nation_flag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-60dp"
            android:layout_marginLeft="17dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/gray"
            app:siRadius="2dp"
            app:siBorderWidth="2dp"
            app:siBorderColor="#FFF"
            app:siSquare="true"/>

        <TextView
            android:id="@+id/nation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:singleLine="true"
            tools:text="Mignon"/>

        <TextView
            android:id="@+id/nation_prename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorSecondaryText"
            android:singleLine="true"
            tools:text="Imperial Republic"/>

    </LinearLayout>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/nation_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF"
        android:paddingLeft  = "3dp"
        android:textColor = "@color/colorSecondaryText"
        app:pstsTextColorSelected = "@color/colorPrimaryText"
        app:pstsIndicatorColor = "@color/colorPrimaryText"
        app:pstsUnderlineColor = "@color/colorPrimaryText"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/nation_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".NationActivity"/>

</LinearLayout>
